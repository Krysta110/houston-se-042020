<form action="/performers" method="post">

<label>Name:</label>
<input type="text" name="performer[name]"/>
<br/>

<% @venues.each do |venue|%>
    <input type="checkbox" name="venue[]" value="<%= venue.id %>" />
    <%= venue.address%>
    <input type="text" name="date[]" placeholder="date for the concert" />
    <br/>
<% end %>

<input type="submit" />
</form>

