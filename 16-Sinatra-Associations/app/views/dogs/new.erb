<form action="/dogs" method="post">

<label>Name:</label>
<input type="text" name="dog[name]">

<label>Breed:</label>
<input type="text" name="dog[breed]">

<label>Owner:</label>
<select name="dog[owner_id]">
    <option disabled selected value> -- select an option -- </option>
    <% @owners.each do |owner| %>
        <option value=<%= owner.id%> >
            <%= owner.name %>
        </option>
    <% end %>
</select>

<label>Create a new owner:</label>
<input type="text" name="owner[name]" placeholder="Write owner's name if doesn't exsist already">

<input type="submit" />
</form>